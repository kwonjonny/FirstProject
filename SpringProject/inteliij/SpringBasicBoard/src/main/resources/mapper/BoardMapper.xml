<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.hi.board.mapper.BoardMapper">

    <!-- file_name 파일의 이름을 저장하는 문자열 -->
    <insert id="insertBoard" parameterType="com.hi.board.domain.RequestRegBoard">
        insert into tbl_board (title, content, writer, file1)
        values (#{title}, #{content}, #{writer}, #{filename})
    </insert>

    <select id="selectList" parameterType="com.hi.board.domain.PageOption"
            resultType="com.hi.board.domain.BoardDTO">

        select * from tbl_board
        <where>
            <if test="searchOption.searchType != null and keyword != null">
                <!-- 제목 검색 -->
                <if test="searchOption.searchType == 'title'">
                    title like concat('%', #{searchOption.keyword} , '%')
                </if>

                <!-- 내용 검색 -->
                <if test="searchOption.searchType == 'content'">
                    content like concat('%', #{searchOption.content} , '%')
                </if>

                <!-- 작성자 검색 -->
                <if test="searchOption.searchType == 'writer'">
                    writer like concat('%', #{searchOption.writer} , '%')
                </if>

            </if>
        </where>
        order by bno desc limit #{startNum} , #{count}
    </select>

    <select id="selectTotalCount" parameterType="com.hi.board.domain.BoardSearchOption" resultType="int">
        select count(*) from tbl_board

        <where>
            <if test="searchType != null AND keyword != null">
                <if test="searchType == 'title'">
                    title like concat('%' #{keyword} '%')
                </if>

                <if test="searchType == 'content'">
                    content like concat('%' #{keyword} '%')
                </if>

                <if test="searchType == 'writer'">
                    writer like concat('%' #{keyword} '%')
                </if>

            </if>
        </where>

    </select>


    <select id="selectAll" resultType="com.hi.board.domain.BoardDTO">
        SELECT * FROM tbl_board
    </select>


    <select id="selectByBno" resultType="com.hi.board.domain.BoardDTO">
        SELECT * FROM tbl_board where bno = #{bno}
    </select>


    <update id="updateBoard" parameterType="com.hi.board.domain.RequestModifyRequest">
        UPDATE tbl_board set title=#{title}, content=#{content}, writer=#{writer}
        , file1#{filename}, updatedate = now()

        where bno = #{bno}
    </update>


    <delete id="deleteBoard">
        delete from tbl_board where bno = #{bno}
    </delete>





</mapper>